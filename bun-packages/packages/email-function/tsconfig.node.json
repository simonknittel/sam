{
	"compilerOptions": {
		"_comment1": "Base Options:",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2020",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"_comment2": "Strictness",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"_comment3": "If NOT transpiling with TypeScript:",
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"_comment4": "If your code doesn't run in the DOM:",
		"lib": ["es2020"],
		"jsx": "react"
	}
}
