model Statistic {
  id        String        @id @default(cuid())
  type      StatisticType
  value     Int
  createdAt DateTime      @default(now())

  @@index([type])
  @@index([createdAt])
  @@index([type, createdAt])
}

enum StatisticType {
  SHIP_COUNT
}

model RoleCitizenCount {
  id        String   @id @default(cuid())
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  count     Int
  createdAt DateTime @default(now())

  @@index([roleId])
  @@index([createdAt])
  @@index([roleId, createdAt])
}
