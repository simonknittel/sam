{
  "name": "email-function",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:lambda": "rm -rf dist && esbuild src/lambda.ts --bundle --platform=node --target=node18 --outdir=dist --minify",
    "build:node": "rm -rf dist && esbuild src/node.ts --bundle --platform=node --target=node18 --outdir=dist --format=esm",
    "start:node": "npm run build:node && node dist/node.js",
    "lint": "tsc --project tsconfig.node.json"
  },
  "devDependencies": {
    "esbuild": "0.20.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@openpgp/web-stream-tools": "0.1.1",
    "@react-email/render": "0.0.12",
    "@types/aws-lambda": "8.10.133",
    "@types/node": "20.10.2",
    "dotenv": "16.4.1",
    "form-data": "4.0.0",
    "mailgun.js": "10.0.1",
    "openpgp": "5.11.0",
    "zod": "3.22.4"
  }
}
