{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "minimumReleaseAge": "7 days",
      "internalChecksFilter": "strict",
      "platformAutomerge": false,
      "automergeStrategy": "squash"
    },
    {
      "matchPackageNames": [
        "@biomejs/biome"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "postgres"
      ],
      "enabled": false
    }
  ],
  "configMigration": true,
  "ignorePaths": [
    "bun-packages/**"
  ]
}
