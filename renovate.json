{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "timezone": "Europe/Berlin",
      "prCreation": "not-pending",
      "minimumReleaseAge": "7 days",
      "internalChecksFilter": "strict",
      "platformAutomerge": false,
      "automergeStrategy": "squash"
    },
    {
      "_comment": "The Biome version is referenced in several files (validate-email-function.yml and biome.json) which are currently not getting updated by Renovate.",
      "matchPackageNames": [
        "@biomejs/biome"
      ],
      "automerge": false
    }
  ],
  "configMigration": true
}
